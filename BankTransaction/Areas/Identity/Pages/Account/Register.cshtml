@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<style>
    body {
        background-image:url('https://picsum.photos/1920/1080/');
        background-repeat: no-repeat;
        background-size: cover;
    }
    
    main > div {
        max-width: 250px;
        width: 100%;
    }
    
    .validation-summary-errors ul {
        list-style-type: none;
        padding: 0;
    }
    
</style>

<div class="card p-2 w-100">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Input.Email" type="email" autocomplete="username" class="form-control" aria-describedby="emailHelp" placeholder="Email" required>
            <small asp-validation-for="Input.Email" class="form-text text-danger"></small>
        </div>
        <div class="form-group mt-2">
            <input asp-for="Input.Password" type="password" autocomplete="new-password" class="form-control" aria-required="true" placeholder="Password" required>
            <small asp-validation-for="Input.Password" class="form-text text-danger"></small>
        </div>
        <div class="form-group mt-2">
            <input asp-for="Input.ConfirmPassword" type="password" autocomplete="new-password" class="form-control" aria-required="true" placeholder="Confirm password" required>
            <small asp-validation-for="Input.ConfirmPassword" class="form-text text-danger"></small>
        </div>
        <button id="registerSubmit" type="submit" class="w-100 btn btn-md btn-primary mt-2">Register</button>
        <a asp-page="./Login" class="w-100 btn btn-md btn-outline-primary mt-2">Log in</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}